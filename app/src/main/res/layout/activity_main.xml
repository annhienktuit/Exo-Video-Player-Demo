<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/llResolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLowRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Low Res"
            android:textColor="@color/zmpurple"
            style="?attr/materialButtonOutlinedStyle"/>
        <Button
            android:id="@+id/btnHighRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:text="High Res"
            android:textColor="@color/zmpurple"
            style="?attr/materialButtonOutlinedStyle"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/llResolution"
        android:text="Low Resolution"
        android:textColor="@color/zmpurple"/>
    <TextView
        android:id="@+id/tvMetaData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvRes"
        android:textColor="@color/purple_500"/>
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvRes"
        app:show_buffering="when_playing"
        app:show_shuffle_button="true"
        app:show_timeout="5000"/>

</RelativeLayout>